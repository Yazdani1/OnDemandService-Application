<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:background="#FFFFFF"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:background="@drawable/bottombarbackdesign"
            android:text="Job title"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/job_title"
            android:maxLines="2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="4dp"
            android:textColor="@android:color/black"
            android:text="Job description.we need to hire some android developer for our ongoinh project.so its important"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/job_description"
            android:maxLines="5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Post Date"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/job_post_Date"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/job_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:maxLines="3"
            android:padding="4dp"
            android:textColor="@android:color/holo_purple"
            android:text="Tk:500"
            android:textAppearance="?android:textAppearanceSmall" />

    </LinearLayout>

</android.support.v7.widget.CardView>